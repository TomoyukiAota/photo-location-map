{
  "productName": "Photo Location Map",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "src-main/**/*",
    "src-shared/**/*",
    "!**/*.ts",
    "!**/*.js.map"
  ],
  "win": {
    "icon": "dist",
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": false
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
