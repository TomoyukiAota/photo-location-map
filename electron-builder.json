{
  "productName": "Photo Location Map",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "electron-web-preferences/**/*",
    "src-main/**/*",
    "src-shared/**/*",
    "!**/*.ts",
    "!**/*.js.map"
  ],
  "asar": false,
  "afterSign": "script/notarize/notarize.js",
  "win": {
    "icon": "dist",
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": false
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "script/notarize/entitlements.mac.plist",
    "entitlementsInherit": "script/notarize/entitlements.mac.plist"
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
