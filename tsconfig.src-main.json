{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "files": [
    "src-main/electron-main.ts",
    "src-main/thumbnail-generation/generate-thumbnail-file-worker.ts"
  ],
  "include": [
    "**/*.d.ts"
  ]
}
